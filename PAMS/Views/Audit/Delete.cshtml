


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Audit</h5>
                <div class="card">
                    <h4 class="text-danger mx-4 mt-4 fw-bold">Are you sure you want to delete this record?</h4>
                    <div class="card-body">
                        <form asp-action="Delete">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden"  />
                            <div class="form-group mb-3">
                                <label class="control-label">Title</label>
                                <input  class="form-control" />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="control-label">Description</label>
                                <input  class="form-control" />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label  class="control-label">Auditor</label>
                                <input  class="form-control" />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label  class="control-label">Start Date</label>
                                <input  class="form-control" />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label  class="control-label">End Date</label>
                                <input  class="form-control" />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label  class="control-label">Status</label>
                                <input  class="form-control" />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label  class="control-label">User Id</label>
                                <select  class="form-control" asp-items="ViewBag.AuditId"></select>
                                <span  class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <input type="submit" value="Submit" class="btn btn-primary mt-3" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
