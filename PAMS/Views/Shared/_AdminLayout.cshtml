<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PAMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="shortcut icon" type="image/png" href="~/Admin/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/Admin/css/styles.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/Admin/css/others.css" rel="stylesheet" />
</head>
<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo">
                    <a asp-action="Index" asp-controller="Admin" class="d-flex align-items-center text-decoration-none">
                        <img src="~/Admin/images/profile/admin-panel.png" alt="PAMS Logo" />
                        <div class="brand-text">
                            <div class="system-name">PAMS</div>
                            <div class="system-description">Audit & Compliance</div>
                        </div>
                    </a>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">Home</li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-chart-pie"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>

                        <li class="nav-small-cap">Audit Modules</li>

                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Admin" asp-action="All_Users">
                                <i class="fas fa-clipboard-check"></i>
                                <span>Users</span>
                            </a>
                        </li>

                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Admin" asp-action="All_Departments">
                                <i class="fas fa-clipboard-check"></i>
                                <span>Departments</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Admin" asp-action="All_Positions">
                                <i class="fas fa-clipboard-check"></i>
                                <span>Positions</span>
                            </a>
                        </li>

                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Audit" asp-action="Index">
                                <i class="fas fa-clipboard-check"></i>
                                <span>Audits</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="AuditEntities" asp-action="Index">
                                <i class="fas fa-building"></i>
                                <span>Audit Entity</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="AuditTasks" asp-action="Index">
                                <i class="fas fa-tasks"></i>
                                <span>Audit Tasks</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Evidences" asp-action="Index">
                                <i class="fas fa-file-upload"></i>
                                <span>Evidence</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="AuditReports" asp-action="Index">
                                <i class="fas fa-file-alt"></i>
                                <span>Audit Reports</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="CorrectiveActions" asp-action="Index">
                                <i class="fas fa-check-double"></i>
                                <span>Corrective Actions</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Feedback" asp-action="Index">
                                <i class="fas fa-check-double"></i>
                                <span>Feedbacks</span>
                            </a>
                        </li>



                        <li class="nav-small-cap">Project Module</li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="Index" asp-controller="Projects">
                                <i class="fas fa-tasks"></i>
                                <span>Projects</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="AdminIndex" asp-controller="Admin">
                                <i class="fas fa-project-diagram"></i>
                                <span>Project Assign</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="Index" asp-controller="ProjectMilestone">
                                <i class="fas fa-flag-checkered"></i>
                                <span>Project Milestones</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="Index" asp-controller="ProjectComments">
                                <i class="fas fa-comments"></i>
                                <span>Project Comments</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="Index" asp-controller="ProjectTasks">
                                <i class="fas fa-check-square"></i>
                                <span>Project Tasks</span>
                            </a>
                        </li>




                        <li class="nav-small-cap">User Module</li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="Index" asp-controller="Notification">
                                <i class="fas fa-user-cog"></i>
                                <span>Notifications</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="Index" asp-controller="UserNotification">
                                <i class="fas fa-bell"></i>
                                <span>User Notifications</span>
                            </a>
                        </li>


                        <li class="nav-small-cap">Administration</li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="AdminIndex" asp-controller="Admin">
                                <i class="fas fa-user-cog"></i>
                                <span>User Management</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="#">
                                <i class="fas fa-cog"></i>
                                <span>Settings</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- Sidebar End -->
        <!-- Main wrapper -->
        <div class="body-wrapper">
            <!-- Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="d-flex align-items-center">
                        <button class="btn btn-icon btn-outline-secondary d-lg-none me-2" id="sidebarToggle">
                            <i class="fas fa-bars"></i>
                        </button>
                     </div>

                    <div class="navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown mx-2">
                                <a class="nav-link nav-icon-hover position-relative" href="#" id="notificationDropdown" data-bs-toggle="dropdown">
                                    <i class="fas fa-bell"></i>
                                    <span class="notification"></span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-animation dropdown-lg p-0">
                                    <div class="p-3 border-bottom">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <h6 class="mb-0">Notifications</h6>
                                            <small class="text-muted">3 new</small>
                                        </div>
                                    </div>
                                    <div class="p-2" style="max-height: 300px; width: 300px; overflow-y: auto;">
                                        <a href="#" class="dropdown-item p-3 border-bottom">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-light rounded p-2 me-3">
                                                    <i class="fas fa-tasks text-primary"></i>
                                                </div>
                                                <div>
                                                    <p class="mb-1">New audit task assigned</p>
                                                    <small class="text-muted">5 minutes ago</small>
                                                </div>
                                            </div>
                                        </a>
                                        <a href="#" class="dropdown-item p-3 border-bottom">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-light rounded p-2 me-3">
                                                    <i class="fas fa-file-signature text-warning"></i>
                                                </div>
                                                <div>
                                                    <p class="mb-1">Report requires approval</p>
                                                    <small class="text-muted">1 hour ago</small>
                                                </div>
                                            </div>
                                        </a>
                                        <a href="#" class="dropdown-item p-3">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-light rounded p-2 me-3">
                                                    <i class="fas fa-check-circle text-success"></i>
                                                </div>
                                                <div>
                                                    <p class="mb-1">Action item completed</p>
                                                    <small class="text-muted">2 hours ago</small>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="p-2 border-top text-center">
                                        <a href="#" class="btn btn-sm btn-link">View All</a>
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link nav-icon-hover" href="#" id="profileDropdown" data-bs-toggle="dropdown">
                                    <img src="~/Admin/images/profile/user-1.jpg" alt="" width="36" height="36" class="rounded-circle border" />
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-animation">
                                    <div class="p-3 text-center border-bottom">
                                        <img src="~/Admin/images/profile/user-1.jpg" alt="" width="60" height="60" class="rounded-circle mb-2 border" />
                                        <h6 class="mb-0">Admin User</h6>
                                        <small class="text-muted">Administrator</small>
                                    </div>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-user me-2"></i> Profile
                                    </a>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-cog me-2"></i> Settings
                                    </a>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-envelope me-2"></i> Messages
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!-- Header End -->
            <!-- Main Content -->
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </div>
    </div>
            <script src="~/Admin/libs/jquery/dist/jquery.min.js"></script>
            <script src="~/Admin/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/Admin/js/sidebarmenu.js"></script>
            <script src="~/Admin/js/app.min.js"></script>
            <script src="~/Admin/libs/apexcharts/dist/apexcharts.min.js"></script>
            <script src="~/Admin/libs/simplebar/dist/simplebar.js"></script>
            <script src="~/Admin/js/dashboard.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @await RenderSectionAsync("Scripts", required: false)


    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.querySelector('.left-sidebar').classList.toggle('show');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.querySelector('.left-sidebar');
            const sidebarToggle = document.getElementById('sidebarToggle');
            if (window.innerWidth < 992 &&
                !sidebar.contains(event.target) &&
                !sidebarToggle.contains(event.target) &&
                sidebar.classList.contains('show')) {
                sidebar.classList.remove('show');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>