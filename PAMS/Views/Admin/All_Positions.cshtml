@model IEnumerable<PAMS.Models.All_positions>
@{
    ViewData["Title"] = "All_Positions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!--  Row 1 -->

    <div class="row">
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title fw-semibold mb-4">Positions</h5>
                        <a style="background-color:black; color:white" class="btn btn-dark " asp-action="Add_Positions" asp-controller="Admin">Add Position</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                                <tr>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Position Id</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Position Name</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Actions</h6>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@i.Position_Id</h6></td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-1">@i.Position_Name</h6>
                                        </td>


                                        <td class="border-bottom-0">
                                            <!-- Split dropend button -->
                                            <div class="btn-group dropend">
                                                <button type="button" class="btn btn-dark">
                                                    Action
                                                </button>
                                                <button type="button" class="btn btn-dark dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <span class="visually-hidden">Toggle Dropend</span>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" asp-controller="Audit" asp-action="Edit" asp-route-id="@i.Position_Id">Edit</a></li>
                                                    <li><a class="dropdown-item" asp-controller="Audit" asp-action="Delete" asp-route-id="@i.Position_Id">Delete</a></li>

                                                </ul>
                                            </div>
                                        </td>

                                    </tr>



                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

