@model PAMS.Models.All_Model_BInds
@{
    ViewData["Title"] = "Add_Checklist";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Add Departments</h5>
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Add_Checklist">
                            <div class="form-group mb-3">
                                <label class="control-label">Checklist Question</label>
                                <input asp-for="all_Checklists.Checklist_question" class="form-control" />
                                <span  class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="control-label">Checklist Department </label>
                                <select asp-for="all_Checklists.Checklist_dept_id" class="form-select">
                                 
                                    @foreach (var i in Model.all_Departments_list)
                                    {
                                        <option value="@i.Department_Id">@i.Department_Name</option>

                                    }
                                 
                                </select>
                            
                            </div>
                            <div class="form-group mt-3">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="All_Checklist" class="btn btn-secondary">Back to List</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

